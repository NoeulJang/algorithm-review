package chap7;

import java.util.*;

public class chap7_5_productOfArrayExceptSelf {

    //n 개의 페어를 이용한 min(a,b)의 합으로 만들 수 있는 가장 큰 수를 출력하라.

    public static void main(String[] args){
        
        int[] nums = {1,3,4,2};

        System.out.println(arrayPartition(nums));

    }
    
    //해결 짝수번째 값 계산
    //오름차순 정렬 시 짝수번째만 (0포함) 합을 더하면 최적의 결과가 나온다.
    public static int arrayPartition(int[] nums) {

        int results = 0;

        Arrays.sort(nums);
        
        for(int i = 0; i < nums.length; i++){
            if(i % 2 == 0){
                results += nums[i];
            }
        }
        return results;
    }



} 
